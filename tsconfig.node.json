{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "composite": true,

    "baseUrl": ".",
    "types": ["node"],
    "outDir": ".vercel/output/functions",

    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["api"],
  "exclude": ["node_modules", "dist", "src"]
}
